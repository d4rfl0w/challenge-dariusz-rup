<div class="page-body">
    <div class="container-xl">
        <div class="row">
            <div class="col-12 col-lg-3 order-lg-1">
                {% hook 'sections#right' %}
            </div>
            <div class="col-12 col-lg-9 order-lg-0">
                {% hook 'sections#left' %}

                {% set resource = hookable_metadata.context.resource %}

                <div class="ui segment">
                    <h4 class="ui dividing header">Notatka do zamówienia</h4>
                    <form action="{{ path('app_order_note_update', {'id': resource.id}) }}" method="post">
                        <div class="field">
                            <textarea name="note" class="ui textarea" maxlength="500">{{ resource.note }}</textarea>
                        </div>
                        <button type="submit" class="ui primary button">Zapisz notatkę</button>
                    </form>
                </div>

            </div>
        </div>
    </div>
</div>
